{
  "manifest_version": 3,
  "name": "Mouse bed",
  "version": "1.0",
  "description": "Add a place where your cursor can chill when you're chilling. ",
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}